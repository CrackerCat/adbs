# 兼容模式，忽略对原生命令的扩展和异常处理
export ADBS_COMPAT_MODE=0

# 默认序列号缓存文件
export ADBS_SERIAL_FILE=/tmp/.adbs_serial

# date 命令的参数
export ADBS_DATE_FORMAT=+%Y%m%d%H%M%S

# 截屏文件路径
#   ${SERIAL}: 设备序列号
#   ${DATE}: 当前时间，时间戳格式请修改 ${ADBS_DATE_FORMAT}
export ADBS_SCREENCAP_FILE_PATH='./screenshot_${DATE}.png'

# 录屏文件路径
#   ${SERIAL}: 设备序列号
#   ${DATE}: 当前时间，时间戳格式请修改 ${ADBS_DATE_FORMAT}
export ADBS_SCREENRECORD_FILE_PATH='./screenrecord_${DATE}.mp4'
# 录屏文件在设备上的缓存目录
export ADBS_SCREENRECORD_SAVE_DIR='/sdcard/'

# apk 文件路径
#   ${NAME}: 应用名称
#   ${PKG}: 应用包名
#   ${VRN}: 应用版本
#   ${VRC}: 应用版本号
#   ${MD5}: apk 文件 MD5
export ADBS_APK_FILE_PATH='./${PKG}_v${VRN}_${MD5}.apk'

# fzf 选择命令，可根据自己喜好修改
export ADBS_FZF="fzf --height=7"
export ADBS_FZF_SERIAL="fzf --height=5"
export ADBS_FZF_PACKAGE="fzf --height=12"
export ADBS_FZF_FILE="fzf --height=12"

# adb connect 时的 localhost 地址
export ADBS_LOCALHOST=localhost

export ADBS_AGENT=${ADBS_AGENT}
export ADBS_PATH=${ADBS_PATH}
export PATH=${ADBS_PATH}/bin:$PATH
